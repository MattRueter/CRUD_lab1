mixin nav_buttons 
    form(
            action= "/"
            method= "GET"
        )
            input(
                type= "submit"
                value= "Home"
                class= "button"
            )
            input(
                type="submit"
                value="Find names"
                formaction= "/getnames"
                class= "button"
            )
            input(
                type="submit"
                value="Add names"
                formaction= "/addnames"
                class= "button"
            )
            input(
                type="submit"
                value="Update names"
                formaction= "/editnames"
                class= "button"
            )
            input(
                type="submit"
                value="Delete names"
                formaction= "/deletenames"
                class= "button"
            )